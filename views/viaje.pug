extends  ./layout/index
block contenido
    main.main.container.mt-5
        .row 
            .col-md-5 
                h1(class="text-center") #{pagina}
                img(src=`/img/destinos_${resultado.imagen}_ln.jpg`, alt="Destino", class="card-img-top")
            .col-md-7.mt-5
                
                h2= resultado.titulo
                p 
                    svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        rect(x='4' y='5' width='16' height='16' rx='2')
                        line(x1='16' y1='3' x2='16' y2='7')
                        line(x1='8' y1='3' x2='8' y2='7')
                        line(x1='4' y1='11' x2='20' y2='11')
                        rect(x='8' y='15' width='2' height='2')

                    | #{resultado.fecha_ida} - #{resultado.fecha_vuelta}
                p 
                    svg.icon.icon-tabler.icon-tabler-receipt-2(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        path(d='M5 21v-16a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v16l-3 -2l-2 2l-2 -2l-2 2l-2 -2l-3 2')
                        path(d='M14 8h-2.5a1.5 1.5 0 0 0 0 3h1a1.5 1.5 0 0 1 0 3h-2.5m2 0v1.5m0 -9v1.5')
                    | #{resultado.precio}

                p 
                    svg.icon.icon-tabler.icon-tabler-armchair(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        path(d='M5 11a2 2 0 0 1 2 2v2h10v-2a2 2 0 1 1 4 0v4a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-4a2 2 0 0 1 2 -2z')
                        path(d='M5 11v-5a3 3 0 0 1 3 -3h8a3 3 0 0 1 3 3v5')
                        path(d='M6 19v2')
                        path(d='M18 19v2')

                    |#{resultado.disponibles} Disponibles
                p #{resultado.descripcion}

